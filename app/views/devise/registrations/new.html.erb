<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_area :family_name, autofocus: true, autocomplete: "姓" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana %><br />
    <%= f.text_area :family_name_kana, autocomplete: "姓カナ" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_area :first_name_kana, autocomplete: "名カナ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="dropdown">
      <%= f.label :company_id %><br />
      <%= f.collection_select(:company_id, Company.all, :id, :name, {}, {class:"select-default"})  %>
  </div>

  <div class="dropdown">
      <%= f.label :division_id %><br />
      <%= f.collection_select(:division_id, Division.all, :id, :name, {}, {class:"select-default"}) %>
  </div>

  <div class="dropdown">
      <%= f.label :station_id %><br />
      <%= f.collection_select(:station_id, Station.all, :id, :name, {}, {class:"select-default"})  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
